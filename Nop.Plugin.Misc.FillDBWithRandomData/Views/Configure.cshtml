@model ConfigurationModel

@using Nop.Plugin.Misc.FillDBWithRandomData.Models

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="FillDBWithRandomData" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CountCategories" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CountCategories" />
                        <span asp-validation-for="CountCategories"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CountProducts" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CountProducts" />
                        <span asp-validation-for="CountProducts"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CountOrders" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CountOrders" />
                        <span asp-validation-for="CountOrders"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CountCustomers" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CountCustomers" />
                        <span asp-validation-for="CountCustomers"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="create_data" class="btn btn-primary" value="Generate data" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>